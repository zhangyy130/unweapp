.modal-wrap {
    z-index: 100;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0,0,0,0.7);
}

.modal-wrap .modal-con {
    color: #888;
    width: 70%;
    background-color: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    border-radius: 5px;
    padding: 10px 20px;
    text-align: center;
    min-height: 300rpx;
}

.modal-wrap .modal-con input {
    border: 1px solid #eee;
}

.modal-footer .btn {
    position: absolute;
    bottom: 0;
    color: #888;
    width: 50%;
    text-align: center;
    font-size: 36rpx;
    background-color: #fff;
}

.modal-body {
    padding: 10rpx;
    margin-top: 50rpx;
    text-align: center;
}

.modal-footer .btn::after {
    border-radius: 0;
}

.modal-footer .cancel-btn {
    border-radius: 0 0 0 5px;
    left: 0;
}

.modal-footer .confirm-btn {
    border-radius: 0 0 5px 0;
    right: 0;
    color: green;
}

.modal-footer-btn {
    padding: 0;
    left: 0;
    right: 0;
    border: 0;
    text-align: center;
    border-top: 1px solid #eee;
    border-radius: 0 0 10rpx 10rpx;
    background-color: #fff;
    position: absolute;
    bottom: 0;
    font-size: 32rpx;
    height: 80rpx;
    line-height: 80rpx;
    color: #FF6C01;
}

.modal-footer-btn:after {
    border: 0;
    border-radius: 0;
}